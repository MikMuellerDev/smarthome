{
    "makefile.extensionOutputFolder": "./.vscode",
    "cSpell.words": [
        "gocron",
        "lnquy",
        "mikmuellerdev",
        "mysql",
        "osman",
        "radi",
        "smarthome",
        "smui",
        "stretchr",
        "vite",
        "webp"
    ],
    
    // Should only be enabled on a Desktop due to power draw
    // "go.coverOnSave": true,

    "go.coverageDecorator": {
        "type": "highlight",
        "coveredHighlightColor": "rgba(13, 188, 138, 0.2)",
        "uncoveredHighlightColor": "rgba(128,64,64,0.8)",
        "coveredGutterStyle": "blockgreen",
        "uncoveredGutterStyle": "blockred"
    },
    "go.coverOnSingleTest": true,
    "go.coverOnTestPackage": true,
    "go.testTimeout": "10m",
    "go.disableConcurrentTests": true,
    "typescript.format.semicolons": "remove",
    "javascript.format.semicolons": "remove",

    // Override for Svelte extension
    "prettier.semi": false,
    "prettier.tabWidth": 4,
    "sqltools.connections": [
        {
            "mysqlOptions": {
                "authProtocol": "default"
            },
            "previewLimit": 50,
            "server": "localhost",
            "port": 3313,
            "driver": "MariaDB",
            "name": "Smarthome",
            "database": "smarthome",
            "username": "smarthome",
            "password": "password"
        }
    ]
}