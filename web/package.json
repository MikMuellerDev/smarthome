{
  "name": "smarthome-web",
  "version": "0.0.12-beta",
  "description": "Webinterface for Smarthome",
  "main": "",
  "scripts": {
    "build:ts": "tsc",
    "build:scss": "sass --no-source-map src/scss:out/css",
    "build": "npm-run-all -s build:*",
    "postbuild": "postcss out/css/**/*.css -ru autoprefixer cssnano --no-map",
    "watch:ts": "tsc --watch --preserveWatchOutput",
    "watch:scss": "sass --source-map -w src/scss:out/css",
    "watch": "npm-run-all -p watch:*"
  },
  "repository": {
    "type": "git",
    "url": "github.com/MikMuellerDev/smarthome"
  },
  "keywords": [
    "smarthome",
    "automation",
    "home"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.9",
    "typescript": "^4.6.2"
  },
  "author": "MikMuellerDev",
  "license": "GPL-2.0-only"
}
